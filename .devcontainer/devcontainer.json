{
  "name": "BTS_SIO2_SLAM_atelier_passage_du_MCD_au_MLD_template",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },

  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

  "forwardPorts": [6080],

  "customizations": {
    "vscode": {
      "extensions": [
        "jebbs.plantuml",
        "kaishuu0123.vscode-erdiagram",
        "ms-azuretools.vscode-docker",
        "mtxr.sqltools",
        "ms-python.python"
      ]
    }
  },

  "postCreateCommand": "echo '✅ Environnement prêt. Le bureau graphique va démarrer automatiquement au prochain start.'",

  // ⬇⬇⬇ A chaque fois que le Codespace démarre, on lance le script du bureau LXDE/noVNC dans le conteneur. ⬇⬇⬇
  "postStartCommand": "/startup.sh &",

  "remoteUser": "root"
}
